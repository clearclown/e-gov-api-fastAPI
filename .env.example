# アプリケーション設定
APP_NAME="e-gov API FastAPI"
APP_VERSION="0.1.0"
DEBUG=false

# e-gov API設定
EGOV_API_BASE_URL="https://elaws.e-gov.go.jp"
EGOV_API_TIMEOUT=30

# Redis設定
REDIS_URL="redis://localhost:6379/0"
REDIS_ENABLED=true

# キャッシュTTL設定（秒）
CACHE_TTL_LAW_DETAIL=86400  # 24時間
CACHE_TTL_SEARCH=3600  # 1時間

# レート制限
RATE_LIMIT_PER_MINUTE=60

# CORS設定
CORS_ORIGINS=["*"]

# ログ設定
LOG_LEVEL="INFO"
