# 軽量版 - Phase 1&2のみ（RAG/ML機能なし）
FROM python:3.12-slim

WORKDIR /app

# 最小限の依存関係のみインストール
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# uv をインストール
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:${PATH}"

# プロジェクトファイルをコピー
COPY pyproject.toml README.md ./
COPY app ./app
COPY .env.example ./.env

# 仮想環境を作成し、コア依存関係のみインストール
RUN uv venv && \
    uv pip install \
    fastapi \
    uvicorn[standard] \
    httpx \
    python-dotenv \
    pydantic \
    pydantic-settings \
    lxml \
    beautifulsoup4 \
    redis \
    psycopg[binary] \
    sqlalchemy \
    anthropic \
    python-multipart \
    pgvector \
    networkx

EXPOSE 8000

CMD [".venv/bin/uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
